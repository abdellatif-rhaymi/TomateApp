<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeWidth="0dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/feedback_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/feedback_card_background">

        <!-- Header avec statut -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/feedback_header_background">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="utilisateur@email.com"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/feedback_text_primary"
                    android:drawableStart="@drawable/ic_user"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/timestamp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Il y a 2 heures"
                    android:textColor="@color/feedback_text_secondary"
                    android:textSize="12sp"
                    android:drawableStart="@drawable/ic_time"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical" />

            </LinearLayout>

            <!-- Statut Badge -->
            <com.google.android.material.chip.Chip
                android:id="@+id/status_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="En attente"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                app:chipBackgroundColor="@color/status_pending"
                app:chipCornerRadius="12dp"
                app:chipMinHeight="24dp"
                style="@style/Widget.MaterialComponents.Chip.Action" />

        </LinearLayout>

        <!-- Rating avec design amélioré -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Évaluation:"
                android:textSize="14sp"
                android:textColor="@color/feedback_text_secondary"
                android:layout_marginEnd="8dp" />

            <RatingBar
                android:id="@+id/rating_bar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.5"
                android:progressTint="@color/rating_gold"
                android:secondaryProgressTint="@color/rating_gray" />

            <TextView
                android:id="@+id/rating_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(5.0)"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/rating_gold"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Message du feedback -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/feedback_text_secondary"
                android:layout_marginBottom="4dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/message_background">

                <TextView
                    android:id="@+id/feedback_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Excellent service, très satisfait de l'application!"
                    android:textSize="14sp"
                    android:textColor="@color/feedback_text_primary"
                    android:padding="12dp"
                    android:lineSpacingExtra="2dp" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="end">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Feedback"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/feedback_text_secondary"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_feedbacks"
                android:drawableTint="@color/feedback_text_secondary"
                />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>