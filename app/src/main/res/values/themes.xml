<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TomatosApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Couleur primaire (utilisée pour les boutons, switches, etc.) -->
        <item name="colorPrimary">@color/green_primary</item>

        <!-- Couleur secondaire (pour les éléments complémentaires) -->
        <item name="colorSecondary">@color/red_primary</item>

        <!-- Surface (couleur des cartes, feuilles, etc.) -->
        <item name="colorSurface">@color/white</item>

        <!-- Couleur d'accentuation -->
        <item name="colorAccent">@color/red_primary</item>

        <!-- Barre de statut -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/green_dark</item>
    </style>
    <style name="BottomNavigationStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@drawable/nav_item_color_state</item>
        <item name="itemTextColor">@drawable/nav_item_color_state</item>
    </style>
</resources>