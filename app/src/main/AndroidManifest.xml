<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <!-- Feature pour l'appareil photo -->
    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TomatosApp"
        tools:targetApi="31">

        <activity
            android:name=".activities.AuthentificationActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.RegistrationActivity"
            android:exported="false"/>
        <activity
            android:name=".activities.ForgotPasswordActivity"
            android:exported="false"/>

        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".activities.ImageUploadActivity"
            android:exported="false" />

        <activity
            android:name=".activities.CameraActivity"
            android:exported="false" />

        <activity
            android:name=".activities.PredictionActivity"
            android:exported="false" />
        <activity
            android:name=".activities.AdminActivity"
            android:exported="false" />

        <activity
            android:name=".activities.LogoutActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <activity
            android:name=".activities.ProfileActivity"
            android:exported="false"/>
        <activity
            android:name=".activities.ChatbotActivity"
            android:exported="false"/>
        <activity
            android:name=".activities.ChangePasswordActivity"
            android:exported="false"/>
        <activity android:name=".activities.UserManagementActivity" android:exported="false"/>
        <activity android:name=".activities.AdminLogoutActivity" android:exported="false" android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

    </application>

</manifest>